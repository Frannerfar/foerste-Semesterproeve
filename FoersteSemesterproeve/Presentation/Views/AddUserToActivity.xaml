<Window x:Class="FoersteSemesterproeve.Presentation.Views.AddUserToActivity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoersteSemesterproeve.Presentation.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="AddUserToActivity" Height="400" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0, 20">
            <TextBlock HorizontalAlignment="Center" >Add user to Activity</TextBlock>
            <TextBlock HorizontalAlignment="Center" FontSize="20" x:Name="ActivityName">Placeholder</TextBlock>
        </StackPanel>

        <ListBox x:Name="UserListBox" Grid.Row="1" Grid.Column="1">
                
        </ListBox>
    

        <StackPanel Grid.Row="2" Grid.Column="1" VerticalAlignment="Center">
            <Button Background="LimeGreen" Click="AddUserButton_Click" Padding="10, 5">
                Add User
            </Button>
        </StackPanel>
        
    </Grid>
</Window>
