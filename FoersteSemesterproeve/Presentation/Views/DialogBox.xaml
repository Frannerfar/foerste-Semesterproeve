<Window x:Class="FoersteSemesterproeve.Views.DialogBox"
        WindowStartupLocation="CenterScreen"        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoersteSemesterproeve.Views"
        mc:Ignorable="d"
        Title="DialogBox" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="30" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        
        <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="DialogBoxText" FontSize="20" TextWrapping="Wrap" Width="auto">Placeholder</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button x:Name="YesButton" FontSize="15" Height="34" Width="100" Margin="30, 0 30, 20" Cursor="Hand" Click="YesButton_Click" Background="#FF00BF2F">Yes</Button>
            <Button x:Name="NoButton" FontSize="15" Height="34" Width="100" Margin="30, 0, 30, 20" Cursor="Hand" Click="NoButton_Click" Background="#FFFF3A00">No</Button>
        </StackPanel>
    </Grid>
</Window>
