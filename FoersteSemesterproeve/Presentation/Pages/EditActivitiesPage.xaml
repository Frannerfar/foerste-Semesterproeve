<UserControl x:Class="FoersteSemesterproeve.Presentation.Pages.EditActivitiesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoersteSemesterproeve.Presentation.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Edit Activity"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Width="300">

            <Label Content="Title:"/>
            <TextBlock x:Name="TitleBox" Height="28" Margin="0 0 0 10"/>

            <Label Content="Start Time:"/>
            <DatePicker x:Name="StartDatePicker" Height="28" Margin="0 0 0 10"/>

            <Label Content="End Time:"/>
            <DatePicker x:Name="EndDatePicker" Height="28" Margin="0 0 0 10"/>

            <Label Content="Coach:"/>
            <ComboBox x:Name="CoachComboBox" Height="28" Margin="0 0 0 10"/>

            <Label Content="Location:"/>
            <ComboBox x:Name="LocationComboBox" Height="28" Margin="0 0 0 10"/>

            <Label Content="MaxCapacity:"/>
            <TextBlock x:Name="MaxCapacityBox" Height="28" Margin="0 0 0 10"/>

            <StackPanel>
                <Button Content="Save Changes"
                        Click="SaveEditButton_Click"
                        Background="LawnGreen"
                        Padding="10 5"
                        Width="120"
                        Margin="5"/>
                
                <Button Content="Cancel"
                        Click="CancelEditButton_Click"
                        Background="Red"
                        Padding="10 5"
                        Width="100"
                        Margin="5"/>
            </StackPanel>

            </StackPanel>    
        </Grid>
    </ScrollViewer>
</UserControl>
