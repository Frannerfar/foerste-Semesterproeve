<UserControl x:Class="FoersteSemesterproeve.Presentation.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoersteSemesterproeve.Presentation.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="White">
        <StackPanel Margin="20">

            <!-- Overskrift -->
            <TextBlock Text="Alle Aktiviteter"
                       FontSize="32"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <!-- Liste over aktiviteter -->
            <ListView x:Name="ActivitiesList"
                      BorderThickness="0"
                      Background="Transparent">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="White"
                                BorderThickness="1"
                                Background="White"
                                CornerRadius="10"
                                Padding="10"
                                Margin="10"
                                Width="200"
                                Height="180"
                                >
                            <StackPanel>
                                <TextBlock Text="{Binding title}" 
                                           FontWeight="Bold"
                                           FontSize="16"
                                           TextAlignment="Center"
                                           Margin="0 5"/>
                                <TextBlock Text="{Binding coach.firstName, StringFormat='Coach: {0}'}"
                                           Foreground="Gray"
                                           TextAlignment="Center"/>
                                <TextBlock Text="{Binding startTime, StringFormat='Start: {0:G}'}"
                                           FontSize="12"
                                           TextAlignment="Center"/>
                                <TextBlock Text="{Binding endTime, StringFormat='Slut: {0:G}'}"
                                           FontSize="12"
                                           TextAlignment="Center"/>

                                <Button Content="Detaljer"
                                        Margin="0 10 0 0"
                                        Padding="5"
                                        Width="100"
                                        HorizontalAlignment="Center"
                                        Background="LightBlue"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </ScrollViewer>
</UserControl>