<UserControl x:Class="FoersteSemesterproeve.Presentation.Pages.ActivitiesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoersteSemesterproeve.Presentation.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- Hele siden er scroll-bar venlig -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- HEADER -->
            <Grid Margin="0 0 0 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Activities"
                           FontSize="32"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="Add Activity"
                        Width="140"
                        Height="35"
                        VerticalAlignment="Center"
                        Margin="10 0 0 0"
                        Click="AddActivityClick"/>
            </Grid>


            <!-- TILMELDTE AKTIVITETER -->
            <TextBlock Text="Tilmeldte aktiviteter"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0 10 0 10"/>

            <ListView x:Name="JoinedActivitiesList"
                      BorderBrush="DarkGray"
                      BorderThickness="1"
                      Margin="0 0 0 20"
                      Background="#FFF">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="White"
                                BorderThickness="1"
                                Padding="10"
                                Margin="10"
                                CornerRadius="10"
                                Background="White"
                                Width="200"
                                Height="180">
                            <Grid>
                                <!-- DELETE KNAP (kun admin) -->
                                <Button Content="X"
                                        Width="25"
                                        Height="25"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Background="Red"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        Margin="0 -5 -5 0"
                                        Tag="{Binding}"
                                        Click="DeleteActivityClick"
                                        Visibility="{Binding DataContext.DeleteButtonVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                                <!-- Indhold -->
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding title}" 
                                               FontWeight="Bold" 
                                               FontSize="16" 
                                               TextAlignment="Center"
                                               Margin="0 5"/>
                                    <TextBlock Text="{Binding coach.firstName, StringFormat='Coach: {0}'}"
                                               Foreground="Gray"
                                               TextAlignment="Center"/>
                                    <TextBlock Text="{Binding startTime, StringFormat='Start: {0:G}'}"
                                               FontSize="12"
                                               TextAlignment="Center"/>
                                    <TextBlock Text="{Binding endTime, StringFormat='End: {0:G}'}"
                                               FontSize="12"
                                               TextAlignment="Center"/>

                                    <!-- AFMELD KNAP -->
                                    <Button Content="Afmeld"
                                            Margin="0,10,0,0"
                                            Padding="5"
                                            Width="100"
                                            HorizontalAlignment="Center"
                                            Background="Red"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            Cursor="Hand"
                                            Tag="{Binding}"
                                            Click="LeaveActivityClick"/>

                                    <Button Content="Edit"
                                            Margin="0 5 0 0"
                                            Padding="5"
                                            Width="100"
                                            HorizontalAlignment="Center"
                                            Background="LightBlue"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            Cursor="Hand"
                                            Tag="{Binding}"
                                            Click="EditActivityClick"
                                            Visibility="{Binding DataContext.DeleteButtonVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                            <!--dette gør at det kun er muligt at skjule knappe -->
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


            <!-- ALLE ANDRE AKTIVITETER -->
            <TextBlock Text="Aktiviteter"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0 10 0 10"/>

            <ListView x:Name="AllActivitiesList"
                      BorderBrush="DarkGray"
                      BorderThickness="1"
                      Background="White">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="White"
                                BorderThickness="1"
                                Padding="10"
                                Margin="10"
                                CornerRadius="10"
                                Background="White"
                                Width="200"
                                Height="180">
                            <Grid>
                                <!-- DELETE KNAP (kun admin) -->
                                <Button Content="X"
                                        Width="25"
                                        Height="25"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Background="Red"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        Margin="0 -5 -5 0"
                                        Tag="{Binding}"
                                        Click="DeleteActivityClick"
                                        Visibility="{Binding DataContext.DeleteButtonVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding title}"
                                               FontWeight="Bold"
                                               FontSize="16"
                                               TextAlignment="Center"
                                               Margin="0 5"/>
                                    <TextBlock Text="{Binding coach.firstName, StringFormat='Coach: {0}'}"
                                               Foreground="Gray"
                                               TextAlignment="Center"/>
                                    <TextBlock Text="{Binding startTime, StringFormat='Start: {0:G}'}"
                                               FontSize="12"
                                               TextAlignment="Center"/>
                                    <TextBlock Text="{Binding endTime, StringFormat='End: {0:G}'}"
                                               FontSize="12"
                                               TextAlignment="Center"/>
                                    

                                    <!-- TILMELD KNAP -->
                                    <Button Content="Tilmeld"
                                            Margin="0,10,0,0"
                                            Padding="5"
                                            Width="100"
                                            HorizontalAlignment="Center"
                                            Background="LawnGreen"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            Cursor="Hand"
                                            Tag="{Binding}"
                                            Click="JoinActivityClick"/>

                                    <Button Content="Edit"
                                            Margin="0 5 0 0"
                                            Padding="5"
                                            Width="100"
                                            HorizontalAlignment="Center"
                                            Background="LightBlue"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            Cursor="Hand"
                                            Tag="{Binding}"
                                            Click="EditActivityClick"
                                            Visibility="{Binding DataContext.DeleteButtonVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </ScrollViewer>
</UserControl>