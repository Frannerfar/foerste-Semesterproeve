<UserControl x:Class="FoersteSemesterproeve.Presentation.Pages.ActivitiesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoersteSemesterproeve.Presentation.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" Grid.Column="1" MaxWidth="1000" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <TextBlock Text="All Activities" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" FontSize="32" FontWeight="Bold" Margin="0 0 0 0"/>

            <Button HorizontalAlignment="Right" Cursor="Hand" FontSize="18" Height="30" Padding="20 0" Content="Add Activity" Background="#FF6A9DCA" Width="auto" VerticalAlignment="Center" Margin="10 0 0 0" Click="AddActivity_Click"/>

        </Grid>

        <Grid x:Name="ScrollViewerGrid" Grid.Row="1" Grid.Column="1" MaxWidth="1000" Margin="0 0 0 0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ScrollViewer MaxWidth="1000" x:Name="ActivitiesScrollViewer" Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
