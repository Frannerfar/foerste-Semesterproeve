<UserControl x:Class="FoersteSemesterproeve.Presentation.Pages.ActivitiesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoersteSemesterproeve.Presentation.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titel -->
        <TextBlock Text="All Activities"
                   FontSize="32"
                   FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <!-- LISTVIEW DER VISES DEN AKTIVE AKTIVITETSLISTE -->
        <ListView x:Name="ActivitiesList"
                  Grid.Row="1"
                  BorderBrush="Gray"
                  BorderThickness="1"
                  Margin="0 0 0 20">

            <ListView.ItemTemplate>
                <DataTemplate>

                    <!-- Hver aktivitet vises som et kort -->
                    <Border BorderBrush="#DDD" 
                            BorderThickness="1" 
                            Padding="10" 
                            Margin="0 0 0 10">
                        <StackPanel>

                            <TextBlock Text="{Binding title}"
                                       FontSize="20"
                                       FontWeight="SemiBold"/>

                            <TextBlock Text="{Binding description}"
                                       FontSize="14"
                                       Margin="0 5 0 0"/>

                            <TextBlock Text="{Binding coach.firstName}"
                                       FontSize="14"
                                       FontStyle="Italic"/>

                            <TextBlock Text="{Binding startTime}"
                                       FontSize="12"
                                       Foreground="Gray"/>

                        </StackPanel>
                    </Border>

                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

    </Grid>
</UserControl>
