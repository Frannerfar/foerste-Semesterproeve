<UserControl x:Class="FoersteSemesterproeve.Presentation.Pages.AddActivitiesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoersteSemesterproeve.Presentation.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="30">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create Activity"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Margin="0 0 0 20"/>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">

            <StackPanel Grid.Row="1" Width="350" Orientation="Vertical" VerticalAlignment="Top">

                <!-- TITLE -->
                <TextBlock Text="Title"/>
                <TextBox x:Name="TitleBox" 
                     Margin="0 0 0 10"/>

                <!-- COACH -->
                <TextBlock Text="Coach"/>
                <ComboBox x:Name="CoachPicker"
                      DisplayMemberPath="firstName"
                      Margin="0 0 0 10"/>

                <!-- LOCATION -->
                <TextBlock Text="Location"/>
                <ComboBox x:Name="LocationPicker"
                      DisplayMemberPath="Name"
                      Margin="0 0 0 10"/>

                <!-- MAX CAPACITY -->
                <TextBlock Text="Max Capacity"/>
                <TextBox x:Name="CapacityBox" Margin="0 0 0 10"/>

                <!-- START -->
                <TextBlock Text="Start Time"/>
                <DatePicker x:Name="StartDatePicker"/>
                <TextBox x:Name="StartTimeBox" Margin="0 0 0 10"/>

                <!-- END -->
                <TextBlock Text="End Time"/>
                <DatePicker x:Name="EndDatePicker"/>
                <TextBox x:Name="EndTimeBox" Margin="0 0 0 10"/>

                <!-- BUTTONS -->
                <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                    <Button Content="Add"
                        Width="120"
                        Margin="0 0 10 0"
                        Click="AddActivity_Click"/>

                    <Button Content="Cancel"
                        Width="120"
                        Click="Cancel_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

    </Grid>



</UserControl>
