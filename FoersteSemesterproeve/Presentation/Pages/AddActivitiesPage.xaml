<UserControl x:Class="FoersteSemesterproeve.Presentation.Pages.AddActivitiesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoersteSemesterproeve.Presentation.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <!-- Layout: 
             HomePage (fastlåst top-menu)
             AddActivities (skabelon) 
        -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">

            <TextBlock FontSize="30">HOME PAGE</TextBlock>
        </StackPanel>


        
        <Grid Grid.Row="1" Margin="40">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <!-- Page Title -->
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                       Text="Create Activity"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Margin="0 0 0 5"/>


            <!-- Aktivitet skabelon med Scrollviewer (eneste måde der kunne være plads til det) -->
            <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto">
                <Grid Margin="0,0,0,20">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <TextBlock Text="Title:" 
                               Grid.Row="0" 
                               Margin="0 0 0 3"/>
                    <TextBox x:Name="TitleBox" 
                             Grid.Row="1" 
                             Margin="0 0 0 10" 
                             Padding="5"/>

                    <!-- Description -->
                    <TextBlock Text="Description:" 
                               Grid.Row="2" 
                               Margin="0 0 0 3"/>
                    <TextBox x:Name="DescriptionBox" 
                             Grid.Row="3" 
                             Height="80" 
                             TextWrapping="Wrap"
                             Margin="0 0 0 10" 
                             Padding="5"/>

                    <!-- Trainer -->
                    <TextBlock Text="Trainer:" 
                               Grid.Row="4" 
                               Margin="0 0 0 3"/>
                    <TextBox x:Name="TrainerBox" 
                             Grid.Row="5" 
                             Margin="0 0 0 10" 
                             Padding="5"/>

                    <!-- Location -->
                    <TextBlock Text="Location:" 
                               Grid.Row="6" 
                               Margin="0 0 0 3"/>
                    <TextBox x:Name="LocationBox" 
                             Grid.Row="7" 
                             Margin="0 0 0 10" 
                             Padding="5"/>

                    <!-- Participant -->
                    <TextBlock Text="Participant:" 
                               Grid.Row="8" 
                               Margin="0 0 0 3"/>
                    <TextBox x:Name="ParticipantBox" 
                             Grid.Row="9" 
                             Margin="0 0 0 10" 
                             Padding="5"/>

                    <!-- Start Date + Time -->
                    <TextBlock Text="Start:" 
                               Grid.Row="10" 
                               Margin="0 0 0 3"/>
                    
                    <StackPanel Grid.Row="11" 
                                Orientation="Horizontal" 
                                Margin="0 0 0 10">
                        <DatePicker x:Name="StartDatePicker" 
                                    Width="150"/>
                        <ComboBox x:Name="StartTimeCombo" 
                                  Width="80" 
                                  Margin="10 0 0 0"/>
                    </StackPanel>

                    <!-- Deadline -->
                    <TextBlock Text="Deadline:" 
                               Grid.Row="12" 
                               Margin="0 0 0 3"/>
                    
                    <StackPanel Grid.Row="13" Orientation="Horizontal" Margin="0 0 0 10">
                        <DatePicker x:Name="DeadlineDatePicker" 
                                    Width="150"/>
                        <ComboBox x:Name="DeadlineTimeCombo" 
                                  Width="80" 
                                  Margin="10 0 0 0"/>
                    </StackPanel>
                    
                    <!-- Create Button -->
                    <Button x:Name="AddActivitiesClickButton"
                            Grid.Row="14"
                            Content="Create Activities"
                            Width="160"
                            Height="40"
                            Margin="0 20 0 0"
                            HorizontalAlignment="Left"
                            Click="CreateButtonClick"/>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>


</UserControl>
