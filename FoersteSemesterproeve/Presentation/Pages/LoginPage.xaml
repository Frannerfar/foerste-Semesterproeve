<UserControl x:Class="FoersteSemesterproeve.Presentation.Pages.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoersteSemesterproeve.Presentation.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel x:Name="LoginPanel" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0">

                    <StackPanel Orientation="Vertical" Margin="10" Width="200">
                        <Label Content="Username" BorderThickness="0"/>
                        <TextBox x:Name="UsernameBox" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="200" Height="25" BorderBrush="Black" BorderThickness="1"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="10" Width="200">
                        <Label Content="Password" BorderThickness="0"/>
                        <PasswordBox x:Name="PasswordBox" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="200" Height="25" BorderBrush="Black" BorderThickness="1"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="30" Width="200">
                        <Button Width="200" BorderBrush="Black" Cursor="Hand" Height="25" FontSize="14" BorderThickness="1" Background="DodgerBlue" Click="LoginButton_Click">Login</Button>
                    </StackPanel>

                </StackPanel>

            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
