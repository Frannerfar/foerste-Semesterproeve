<UserControl x:Class="FoersteSemesterproeve.Presentation.Pages.MembershipsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoersteSemesterproeve.Presentation.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="MembershipPage">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <TextBlock FontSize="30" Grid.Row="0" Grid.Column="1" Text="MEMBERSHIPS" HorizontalAlignment="Center" />

        <Grid Name="membershipTypes" Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" 
                       Name="None"
                       HorizontalAlignment="Center"
                       FontSize="40"/>
            <ListView Grid.Row="1" Grid.Column="0"
                      Name="noneList"
                      FontSize="15"
                      HorizontalAlignment="Center"
                      HorizontalContentAlignment="Center"
                      BorderThickness="0"
                      IsHitTestVisible="False"/>
            
            
            <TextBlock Grid.Row="0" Grid.Column="1"
                       Name="Standard"
                       HorizontalAlignment="Center"
                       FontSize="40"/>
            <ListView Grid.Row="1" Grid.Column="1"
                      Name="standardList"
                      FontSize="15"
                      HorizontalAlignment="Center"
                      HorizontalContentAlignment="Center"
                      BorderThickness="0"
                      IsHitTestVisible="False"/>
            
            
            <TextBlock Grid.Row="0" Grid.Column="2" 
                       Name="Pro"
                       HorizontalAlignment="Center"
                       FontSize="40"/>
            <ListView Grid.Row="1" Grid.Column="2"
                      Name="proList"
                      FontSize="15"
                      HorizontalAlignment="Center"
                      HorizontalContentAlignment="Center"
                      IsHitTestVisible="False"
                      BorderThickness="0"/>
        </Grid>
    </Grid>
</UserControl>
