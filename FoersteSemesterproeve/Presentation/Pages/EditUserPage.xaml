<UserControl x:Class="FoersteSemesterproeve.Presentation.Pages.EditUserPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoersteSemesterproeve.Presentation.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="300" />
                <ColumnDefinition Width="*" MaxWidth="300"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>


            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical">
                <Label Content="First Name" x:Name="FirstNameLabel" />
                <TextBox x:Name="FirstNameBox"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
                <Label Content="Last Name" x:Name="LastNameLabel" />
                <TextBox x:Name="LastNameBox"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical">
                <Label Content="Emails" x:Name="EmailLabel" />
                <TextBox x:Name="EmailBox"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Vertical">
                <Label Content="City" x:Name="CityLabel" />
                <TextBox x:Name="CityBox"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Vertical">
                <Label Content="Address" x:Name="AddressLabel" />
                <TextBox x:Name="AddressBox"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Grid.Column="0" Orientation="Vertical">
                <Label Content="Postal" x:Name="PostalLabel" />
                <TextBox x:Name="PostalBox"/>
            </StackPanel>





            <StackPanel Margin="10, 0, 10, 0" Grid.Row="0" Grid.Column="1" Orientation="Vertical">
                <Label Content="Date of Birth" x:Name="DOBLabel" />
                <DatePicker x:Name="DatePicker" />
            </StackPanel>

            <StackPanel Margin="10, 0, 10, 0" Grid.Row="1" Grid.Column="1" Orientation="Vertical">
                <Label Content="Trainer" x:Name="TrainerLabel" />
                <CheckBox x:Name="TrainerCheckbox"/>
            </StackPanel>

            <StackPanel Margin="10, 0, 10, 0" Grid.Row="2" Grid.Column="1" Orientation="Vertical">
                <Label Content="Admin" x:Name="AdminLabel" />
                <CheckBox x:Name="AdminCheckbox"/>
            </StackPanel>

            <StackPanel Margin="10, 0, 10, 0" Grid.Row="3" Grid.Column="1" Orientation="Vertical">
                <Label Content="Has Paid" x:Name="PaidLabel" />
                <CheckBox x:Name="HasPaidCheckbox"/>
            </StackPanel>


            <StackPanel Grid.Row="7" Grid.Column="0">
                <Button x:Name="ButtonSave" Click="ButtonSave_Click">Save</Button>
                
            </StackPanel>
        </Grid>
    </Grid>
        
</UserControl>
