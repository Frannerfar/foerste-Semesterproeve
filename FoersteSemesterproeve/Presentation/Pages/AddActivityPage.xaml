<UserControl x:Class="FoersteSemesterproeve.Presentation.Pages.AddActivityPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoersteSemesterproeve.Presentation.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"          >
            <TextBlock FontSize="28" FontWeight="Bold">Create Activity</TextBlock>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel MaxWidth="700" Orientation="Vertical" VerticalAlignment="Top">


                <Border BorderBrush="LightGray" BorderThickness="1" Padding="20, 40" Margin="0 20, 0 20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>



                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="20 0">
                            <TextBlock Text="Title" Height="24" FontSize="14"/>
                            <TextBox x:Name="TitleBox" Height="28" FontSize="16"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="20 30">
                            <TextBlock Text="Max Capacity (leave empty for limitless)" Height="24" FontSize="14"/>
                            <TextBox x:Name="CapacityBox" Height="28" FontSize="16"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="20 0">
                            <TextBlock Text="Trainer" Height="24" FontSize="14"/>
                            <ComboBox x:Name="CoachPicker" Height="28" FontSize="16"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="20 30">
                            <TextBlock Text="Location" Height="24" FontSize="14"/>
                            <ComboBox x:Name="LocationPicker" Height="28" FontSize="16"/>
                        </StackPanel>
                    </Grid>
                </Border>



                <Border BorderBrush="LightGray" BorderThickness="1" Padding="20, 40" Margin="0 20, 0, 40">
                    <StackPanel>
                        <Grid Margin="0 20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="20 0">
                                <TextBlock Text="Start Date" Height="24" FontSize="14"/>
                                <DatePicker x:Name="StartDatePicker" Height="28" FontSize="16"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="20 0">
                                <TextBlock Text="Start Time" Height="24" FontSize="14"/>
                                <TextBox x:Name="StartTimeBox" Height="28" FontSize="16" Margin="0 1 0 0"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0 30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="20 0">
                                <TextBlock Text="End Date" Height="24" FontSize="14"/>
                                <DatePicker x:Name="EndDatePicker" Height="28" FontSize="16"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="20 0">
                                <TextBlock Text="End Time" Height="24" FontSize="14"/>
                                <TextBox x:Name="EndTimeBox" Height="28" FontSize="16" Margin="0 1 0 0"/>

                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>



            </StackPanel>
        </ScrollViewer>


        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Margin="0 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Width="150" Padding="0, 5, 0, 5" Margin="0 0 40 0" Click="AddActivity_Click" Cursor="Hand" Background="Lime">Create</Button>

            <Button Width="150" Padding="0, 5, 0, 5" Cursor="Hand" Background="Red" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</UserControl>
