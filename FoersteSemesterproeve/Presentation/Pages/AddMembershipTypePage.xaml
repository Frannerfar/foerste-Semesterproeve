<UserControl x:Class="FoersteSemesterproeve.Presentation.Pages.AddMembershipTypePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoersteSemesterproeve.Presentation.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="Add Membershiptype"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="30"/>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
                <Border Grid.Row="0" Grid.Column="1" 
                        Padding="5"
                        Margin="50, 20, 50, 20"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="20">
                    <StackPanel VerticalAlignment="Center" Margin="10">
                        <TextBlock 
                                   Text="TITLE:"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   FontSize="20"/>
                        <TextBox 
                                 x:Name="TitleInput"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 VerticalAlignment="Top"
                                 Height="20"
                                 Width="180"
                                 Margin="0, 0, 0, 20"/>

                        <TextBlock 
                                   Text="Monthly pay DKK"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   FontSize="20"/>
                        <TextBox 
                                 x:Name="MonthlyInput"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 VerticalAlignment="Top"
                                 Height="20"
                                 Width="180"
                                 Margin="0, 0, 0, 20"/>

                        <TextBlock 
                                   Text="Yearly pay DKK:"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   FontSize="20"/>
                        <TextBox 
                                 x:Name="YearlyInput"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 VerticalAlignment="Top"
                                 Height="20"
                                 Width="180"
                                 Margin="0, 0, 0, 20"/>
                    </StackPanel>
                </Border>
            <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20, 50, 20, 0">
                <Button Content="CANCEL"
                        Margin="0, 0, 40, 0"
                        Background="Red"
                        x:Name="CancelAddMembershipTypeButton" 
                        Click="CancelAddMembershipTypeButton_Click"
                        Height="30"
                        Width="80"/>
                <Button Content="SAVE"
                        Background="Green"
                        x:Name="SaveNewMembershipTypeButton" Click="SaveNewMembershipTypeButton_Click"
                        Height="30"
                        Width="80"/>
            </StackPanel>

        </Grid>

    </Grid>
</UserControl>
