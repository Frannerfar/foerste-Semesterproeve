<UserControl x:Class="FoersteSemesterproeve.Presentation.Pages.ViewTrainerInfoPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoersteSemesterproeve.Presentation.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="1" Grid.Column="1" Padding="20, 10, 20, 20" BorderBrush="LightGray" BorderThickness="1" Margin="160, 10, 160, 150" VerticalAlignment="Center" CornerRadius="20">
            <StackPanel x:Name="TrainerInfoStackPanel" Grid.Row="1" Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">
                <TextBlock Text="Full Name"
                       TextAlignment="Center"
                       FontSize="20"/>
                <TextBlock x:Name="TrainerFullNameBlock"
                       TextAlignment="Center"/>

                <TextBlock Text="Activities:"
                       TextAlignment="Center"
                       FontSize="20"
                       Margin="0, 20, 0, 0"/>
                <ListBox x:Name="TrainerActivitiesList"/>
            </StackPanel>
        </Border>

        <Button x:Name="BackToTrainersPageButton"
                Grid.Row="2"
                Grid.Column="1"
                Content="Back" Click="BackToTrainersPageButton_Click"
                VerticalAlignment="Top"
                MaxWidth="50"/>
    </Grid>
</UserControl>
