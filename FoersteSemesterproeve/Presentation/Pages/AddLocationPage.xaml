<UserControl x:Class="FoersteSemesterproeve.Presentation.Pages.AddLocationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoersteSemesterproeve.Presentation.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
            
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock FontSize="20">Add Location</TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
            <StackPanel>
                <Label x:Name="LocationNameFlag" Visibility="Collapsed" Foreground="Red">Required field!</Label>
                <Label x:Name="LocationNameLabel">Name</Label>
                <TextBox x:Name="LocationNameBox" />
            </StackPanel>

            <StackPanel>
                <Label x:Name="LocationDescriptionFlag" Visibility="Collapsed" Foreground="Red">Required field!</Label>
                <Label x:Name="LocationDescriptionLabel">Description</Label>
                <TextBox x:Name="LocationDescriptionBox" />
            </StackPanel>

            <StackPanel>
                <Label x:Name="LocationCapacityFlag" Visibility="Collapsed" Foreground="Red">Required field!</Label>
                <Label x:Name="LocationCapacityLabel">Max Capacity: (leave empty for unlimited)</Label>
                <TextBox x:Name="LocationCapacityBox" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Padding="10 5 10 5" Background="Green" Click="SaveButton_Click">Save</Button>
        </StackPanel>
    </Grid>
</UserControl>
